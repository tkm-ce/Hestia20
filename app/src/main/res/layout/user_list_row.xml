<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/user_event_row_card"
        android:layout_width="132dp"
        android:layout_height="162dp"
        app:cardBackgroundColor="@android:color/holo_blue_dark"
        android:elevation="3dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_event_row_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/event_poster"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:tint="#45000000" />

            <TextView
                android:id="@+id/user_event_row_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/user_event_row_title"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/circular_bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tool:text="28/02/20" />

            <TextView
                android:id="@+id/user_event_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/circular_bold"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tool:text="DJ WAR" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
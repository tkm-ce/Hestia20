<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/participant_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="27dp"
        android:fontFamily="@font/ave_heavy"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:text="hi dummy"/>

    <CheckBox
        android:id="@+id/participant_row_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:fontFamily="@font/ave_med"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:buttonTint="@android:color/white"
        android:text="@string/accommodation_required"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:background="@color/fieldBg"
        />

</LinearLayout>
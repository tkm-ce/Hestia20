<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".user_dash.UserHome">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:id="@+id/home_menu_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon"
            android:src="@drawable/ic_menu_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/calendar_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/accommodation_layout_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/events_featured_recycler">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/icon"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:id="@+id/home_schedule_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/circular_bold"
                android:gravity="start"
                android:padding="15dp"
                android:text="@string/see_schedule"
                android:textColor="@android:color/white"
                android:textSize="17sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/featured_events_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/circular_bold"
            android:text="@string/top_events"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_title" />

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/circular_bold"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/event_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/featured_events_title"
            android:orientation="vertical"
            shimmer:duration="800">

            <!-- Adding 7 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <include layout="@layout/event_placeholder_layout" />
                <include layout="@layout/event_placeholder_layout" />
                <include layout="@layout/event_placeholder_layout" />
                <include layout="@layout/event_placeholder_layout" />
                <include layout="@layout/event_placeholder_layout" />
                <include layout="@layout/event_placeholder_layout" />
                <include layout="@layout/event_placeholder_layout" />
                <include layout="@layout/event_placeholder_layout" />
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_featured_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/featured_events_title" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/boarding_profile_img"
            android:layout_width="38dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/home_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="63dp"
        android:padding="10dp"
        android:background="@drawable/user_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="410dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <TextView
            android:id="@+id/user_events_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/ave_heavy"
            android:text="@string/all_events"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />


        <!--<LinearLayout-->
        <!--android:layout_marginTop="10dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/user_events_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="-2dp"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent">-->

        <!--<androidx.recyclerview.widget.RecyclerView-->
        <!--android:id="@+id/home_category_list"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/user_events_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--/>-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:foregroundGravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/section_icon1"
                    android:layout_width="62dp"
                    android:contentDescription="@string/icon"
                    android:layout_height="62dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_go"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_gear" />

                <TextView
                    android:id="@+id/section_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_icon1"
                    android:layout_alignStart="@id/section_icon1"
                    android:layout_alignEnd="@id/section_icon1"
                    android:fontFamily="@font/circular_bold"
                    android:padding="3dp"
                    android:text="@string/technical"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:contentDescription="@string/icon"
                    android:id="@+id/section_icon2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_go"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_online" />

                <TextView
                    android:id="@+id/section_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_icon2"
                    android:layout_alignStart="@id/section_icon2"
                    android:layout_alignEnd="@id/section_icon2"
                    android:fontFamily="@font/circular_bold"
                    android:padding="3dp"
                    android:text="@string/online"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:contentDescription="@string/icon"
                    android:id="@+id/section_icon3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_go"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_general" />

                <TextView
                    android:id="@+id/section_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_icon3"
                    android:layout_alignStart="@id/section_icon3"
                    android:layout_alignEnd="@id/section_icon3"
                    android:fontFamily="@font/circular_bold"
                    android:padding="3dp"
                    android:text="@string/general"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/section_icon4"
                    android:layout_width="62dp"
                    android:contentDescription="@string/icon"
                    android:layout_height="62dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_go"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music" />

                <TextView
                    android:id="@+id/section_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_icon4"
                    android:layout_alignStart="@id/section_icon4"
                    android:layout_alignEnd="@id/section_icon4"
                    android:fontFamily="@font/circular_bold"
                    android:padding="3dp"
                    android:text="@string/cultural"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/section_icon5"
                    android:layout_width="61dp"
                    android:contentDescription="@string/icon"
                    android:layout_height="62dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_go"
                    android:padding="13dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_workshop" />

                <TextView
                    android:id="@+id/section_title5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/section_icon5"
                    android:layout_alignStart="@id/section_icon5"
                    android:layout_alignEnd="@id/section_icon5"
                    android:fontFamily="@font/circular_bold"
                    android:paddingTop="3dp"
                    android:text="@string/workshop"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/home_load_anim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/load_new" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/all_events_shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            shimmer:duration="800">

            <!-- Adding 7 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include layout="@layout/all_events_placeholder_layout" />
                <include layout="@layout/all_events_placeholder_layout" />
                <include layout="@layout/all_events_placeholder_layout" />
                <include layout="@layout/all_events_placeholder_layout" />
                <include layout="@layout/all_events_placeholder_layout" />
                <include layout="@layout/all_events_placeholder_layout" />
                <include layout="@layout/all_events_placeholder_layout" />
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_event_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>